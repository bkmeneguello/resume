extends layouts/default

block content
    -
        var content = {
            name: 'Bruno Meneguello',
            occupation: 'Desenvolvedor de Software',
            linkedin: 'bkmeneguello',
            github: 'bkmeneguello',
            sections: [
                {header: 'Teste1'},
                {header: 'Teste2'},
                {header: 'Teste3'}
            ]
        }

    #content.container
        #header
            #photo
                img(src='images/photo.jpg')
            #contact
                h1.name= content.name
                h3.occupation= content.occupation
                address
                    .linkedin /#{content.linkedin}
                    .github /#{content.github}
        #body
            #skills s
            #details
                each section in content.sections
                    section.detail
                        header= section.header
